<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.interfejs.DodajSamochodController"
      style="-fx-padding: 16;">

    <Label text="Dodaj nowy samochód" />

    <Label text="Model"/>
    <TextField fx:id="modelTextField"/>

    <Label text="Numer rejestracyjny"/>
    <TextField fx:id="registrationTextField"/>

    <Label text="Waga"/>
    <TextField fx:id="weightTextField"/>

    <Label text="Silnik"/>
    <ComboBox fx:id="engineComboBox"/>

    <Label text="Skrzynia biegów"/>
    <ComboBox fx:id="gearboxComboBox"/>

    <Label text="Sprzęgło"/>
    <ComboBox fx:id="clutchComboBox"/>

    <HBox spacing="10">
        <Button fx:id="confirmButton" text="Zatwierdź" onAction="#onConfirmButton"/>
        <Button fx:id="cancelButton" text="Anuluj" onAction="#onCancelButton"/>
    </HBox>
</VBox>
