<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="1024.0" prefWidth="1024.0"
            fx:controller="com.example.interfejs.HelloController"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" >

    <left>
        <VBox prefWidth="260" spacing="0.0">
            <children>

                <!-- Samochód -->
                <TitledPane text="Samochód" expanded="true">
                    <content>
                        <GridPane hgap="5.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                            <children>
                                <Label text="Model"
                                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfCarModel"
                                           GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Nr rejestracyjny"
                                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfCarPlate"
                                           GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Waga"
                                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfCarWeight"
                                           GridPane.rowIndex="2" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Prędkość"
                                       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfCarSpeed"
                                           GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false"/>

                                <HBox spacing="5.0"
                                      GridPane.rowIndex="4" GridPane.columnIndex="0"
                                      GridPane.columnSpan="2">
                                    <children>
                                        <Button fx:id="włączButton" text="Włącz"
                                                onAction="#onwłączButton"/>
                                        <Button fx:id="wyłączButton" text="Wyłącz"
                                                onAction="#onwyłączButton"/>
                                    </children>
                                </HBox>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>

                <TitledPane text="Skrzynia Biegów" expanded="true">
                    <content>
                        <GridPane hgap="5.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>

                            <children>
                                <Label text="Nazwa"
                                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfGearName"
                                           GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Cena"
                                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfGearPrice"
                                           GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Waga"
                                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfGearWeight"
                                           GridPane.rowIndex="2" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Bieg"
                                       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfGearCurrent"
                                           GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false"/>

                                <HBox spacing="5.0"
                                      GridPane.rowIndex="4" GridPane.columnIndex="0"
                                      GridPane.columnSpan="2">
                                    <children>
                                        <Button fx:id="zwiększbiegButton" text="Zwiększ Bieg"
                                                onAction="#onzwiększbiegButton"/>
                                        <Button fx:id="zmniejszbiegButton" text="Zmniejsz Bieg"
                                                onAction="#onzmniejszbiegButton"/>
                                    </children>
                                </HBox>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>

                <TitledPane text="Silnik" expanded="true">
                    <content>
                        <GridPane hgap="5.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>

                            <children>
                                <Label text="Nazwa"
                                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfEngineName"
                                           GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Cena"
                                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfEnginePrice"
                                           GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Waga"
                                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfEngineWeight"
                                           GridPane.rowIndex="2" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Obroty"
                                       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfEngineCurrent"
                                           GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false"/>

                                <HBox spacing="5.0"
                                      GridPane.rowIndex="4" GridPane.columnIndex="0"
                                      GridPane.columnSpan="2">
                                    <children>
                                        <Button fx:id="dodajgazuButton" text="Dodaj Gazu"
                                                onAction="#ondodajgazuButton"/>
                                        <Button fx:id="luzujButton" text="Luzuj"
                                                onAction="#onluzujButton"/>
                                    </children>
                                </HBox>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>

                <TitledPane text="Sprzęgło" expanded="true">
                    <content>
                        <GridPane hgap="5.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>

                            <children>
                                <Label text="Nazwa"
                                       GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfGearClutchName"
                                           GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Cena"
                                       GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfClutchPrice"
                                           GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Waga"
                                       GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfClutchWeight"
                                           GridPane.rowIndex="2" GridPane.columnIndex="1" editable="false"/>

                                <Label text="Stan"
                                       GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                <TextField fx:id="tfClutchCurrent"
                                           GridPane.rowIndex="3" GridPane.columnIndex="1" editable="false"/>

                                <HBox spacing="5.0"
                                      GridPane.rowIndex="4" GridPane.columnIndex="0"
                                      GridPane.columnSpan="2">
                                    <children>
                                        <Button fx:id="wciśnijButton" text="Wciśnij"
                                                onAction="#onzaciągnijButton"/>
                                        <Button fx:id="zwolnijButton" text="Zwolnij"
                                                onAction="#onzwolnijButton"/>
                                    </children>
                                </HBox>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>
            </children>
        </VBox>
    </left>

    <top>
        <VBox>

            <MenuBar>
                <menus>
                    <Menu text="Plik">
                        <items>
                            <MenuItem text="Nowy" onAction="#onMenuNowy"/>
                            <MenuItem text="Zamknij" onAction="#onMenuZamknij"/>
                        </items>
                    </Menu>
                    <Menu text="Edycja">
                        <items>
                            <MenuItem text="Usuń" onAction="#onMenuUsun"/>
                        </items>
                    </Menu>
                </menus>
            </MenuBar>

            <HBox spacing="10" alignment="CENTER_LEFT" prefHeight="40">
                <Label text="Samochód"/>
                <ComboBox fx:id="samochodComboBox" prefWidth="160.0"/>

                <Button fx:id="addCarButton"
                        text="Dodaj nowy"
                        onAction="#onAddCarButton"/>

                <Button fx:id="removeCarButton"
                        text="Usuń"
                        onAction="#onRemoveCarButton"/>
            </HBox>

        </VBox>
    </top>

    <center>
        <Pane fx:id="mapa"  style="-fx-background-color: #2ecc71;">
            <children>
                <ImageView fx:id="carImageView" preserveRatio="true"/>
            </children>
        </Pane>
    </center>


</BorderPane>
